@using DigitalMenu.Models.Administrator
@model TwoListMenuApp

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Administrator/Shared/_AdministratorLayout.cshtml";

}
<h4>Lista de menu</h4>
<hr class="bg-custom-color" />

<button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalNewMenu">
    Nuevo menu
</button>
<button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalRolMenu">
    Administrador de menu
</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Application</th>         
            <th>Name</th>
            <th>Active</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Menu)
        {
            <tr>
                <td>@item.ApplicationName.Trim()</td>
                <td>@item.Name</td>
                <td>@item.Active</td>
                <td>
                    <a class="bi bi-pencil-square" asp-action="Editar" asp-route-id="@item.IdMenu"></a>
                </td>
                <td>
                    <a class="bi bi-trash3" asp-action="Borrar" asp-route-id="@item.IdMenu"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Partial\_CreateMenuForm" />
<partial name="_Partial\_AdminMenuRol" />
@section Scripts {
    <script src="~/js/administrator/menu.js" asp-append-version=" true"></script>
}