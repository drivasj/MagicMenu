@using DigitalMenu.Models.Administrator
@model IEnumerable<ApplicationViewModel>

@{
    ViewData["Title"] = "Application";
    Layout = "~/Views/Administrator/Shared/_AdministratorLayout.cshtml";
}
<h4>Application list</h4>
<hr class="bg-custom-color" />

<button type="button" class="btn btn-outline-primary mb-3" onclick="ShowCreateApplication()">
    New Application
</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Display</th>
            <th>Active</th>
            <th>Edit</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Display</td>
                <td>@item.Active</td>
                <td>
                    <a onclick="ShowDetailApplication(@item.IdApplication)" style="cursor:pointer" class="bi bi-pencil-square"></a>
                </td>
                <td>
                    <a onclick="UpdateStateApp(@item.IdApplication)" style="cursor:pointer" class="bi bi-android"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="DetailAppContainer">
</div>

@section Scripts {
    <script src="~/js/administrator/application.js" asp-append-version=" true"></script>
}