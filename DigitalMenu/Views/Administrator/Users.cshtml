@using DigitalMenu.Models.Administrator;
@model CombosRoleUserViewModel

@{
    ViewData["Title"] = "Adminstrador de usuarios";
    Layout = "~/Views/Administrator/Shared/_AdministratorLayout.cshtml";
}
<h4>Users</h4>
<hr class="bg-custom-color" />

<button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalNewUser">
    New User
</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>UserName</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <a class="bi bi-pencil-square" asp-action="Editar" asp-route-id="@item.IdEmployee"></a>
                </td>
                <td>
                    <a class="bi bi-trash3" asp-action="Borrar" asp-route-id="@item.IdEmployee"></a>
                </td>

            </tr>
        }
    </tbody>
</table>

<partial name="_Partial/_CreateUserForm" />

@section Scripts {
    <script src="~/js/administrator/userAdmin.js" asp-append-version=" true"></script>
}