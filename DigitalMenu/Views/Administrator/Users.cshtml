@using DigitalMenu.Models.Administrator;
@model CombosRoleUserViewModel

@{
    ViewData["Title"] = "Adminstrador de usuarios";
    Layout = "~/Views/Administrator/Shared/_AdministratorLayout.cshtml";
}
<h4>Users</h4>
<hr class="bg-custom-color" />

<button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalNewUser">
    New User
</button>
<button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalUserdetail">
    Detail User
</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>             
                <td>
                    <a onclick="ShowDetailUser(@item.IdEmployee)"
                       style="cursor:pointer" class="bi bi-eye">
                   </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="DetailUserContainer">
</div>

<partial name="_Partial/_CreateUserForm" />
@* <partial name="_Partial/_DetailUser" /> *@

@section Scripts {
    <script src="~/js/administrator/userAdmin.js" asp-append-version=" true"></script>
}