@using DigitalMenu.Models.Administrator
@model CreateUserViewModel
<!-- Modal -->
<div class="modal fade" id="ModalNewUser" tabindex="-1" aria-labelledby="ModalNewUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalNewUserLabel">
                    New User
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body table-responsive">
                <div class="row g-3 needs-validation mb-3" novalidate>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Nombre</label>
                        <input type="text" asp-for="FirstName" class="form-control textNewUser" id="name" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Nombre es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Segundo Nombre</label>
                        <input type="text" asp-for="MiddleName" class="form-control textNewUser" id="middleName" autocomplete="off" />
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Primer Apellido</label>
                        <input type="text" asp-for="LastName" class="form-control textNewUser" id="lastName" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Apellido es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Segundo Apellido</label>
                        <input type="text" asp-for="MotherLastName" class="form-control textNewUser" id="motherName" autocomplete="off" />
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Documento</label>
                        <input type="text" asp-for="Document" class="form-control textNewUser" id="document" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Documento es requerido
                        </div>
                    </div>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Teléfono</label>
                        <input type="text" asp-for="Phone" class="form-control textNewUser" id="phone" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Teléfono es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Correo electrónico</label>
                        <input type="text" asp-for="Email" class="form-control textNewUser" id="email" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Email es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Role</label>
                        <select class="form-select" id="role" required asp-items="@(new SelectList(Model.Roles,"IdRole","Name"))">
                                <option value="">Seleccionar</option>
                            </select>
                        <div class="invalid-feedback">
                            Debe seleccionar un rol
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Usuario</label>
                        <input type="text" asp-for="UserName" class="form-control textNewUser" id="userName" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Usuario es requerido
                        </div>
                    </div>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Dirección</label>
                        <input type="text" class="form-control textNewUser" id="adress" autocomplete="off" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveUser()">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>