@using DigitalMenu.Models.Administrator
@model ApplicationViewModel;

<!-- Modal -->
<div class="modal fade" id="ModalDetailApplication" tabindex="-1" aria-labelledby="ModalNewUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalNewUserLabel">
                    Nuevo usuario
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body table-responsive">
                <div class="row g-3 needs-validation mb-3" novalidate>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Application</label>
                        <input type="text" asp-for="Name" class="form-control textEditApp" id="nameApplication" value="@Model.Name" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Name Application es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Description</label>
                        <input type="text" asp-for="Description" class="form-control textEditApp" id="description" value="@Model.Description" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Description es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Display</label>
                        <input type="text" asp-for="Display" class="form-control textEditApp" id="display" value="@Model.Display" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo display es requerido
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Icon</label>
                        <input type="text" asp-for="Icon" class="form-control textEditApp" id="icon" value="@Model.Icon" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo icon es requerido
                        </div>
                    </div>
                    <input type="hidden" id="idApp" value="@Model.IdApplication" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editApplication()">Save changes</button>
            </div>
        </div>
    </div>
</div>

