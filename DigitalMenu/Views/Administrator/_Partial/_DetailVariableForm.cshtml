@using DigitalMenu.Models.Administrator
@model SystemvariableViewModel
<!-- Modal -->
<div class="modal fade" id="ModalDetailVariable" tabindex="-1" aria-labelledby="ModalNewVariableLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalNewUserLabel">
                    Edit System variable
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body table-responsive">
                <div class="row g-3 needs-validation mb-3" novalidate>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Type Systemvariable</label>
                        <select asp-for="TypesystemvariableId" required class="form-select" id="typesystemvariableId" asp-items="@(new SelectList(Model.Typesystemvariable,"IdTypesystemvariable","Name"))">
                            <option value="0">Seleccionar</option>
                        </select>
                        <div class="invalid-feedback">
                            Seleccione un tipo de variable
                        </div>
                    </div>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Nombre</label>
                        <input type="text" value="@Model.Name" class="form-control textNewVariable" id="name" autocomplete="off" required />
                        <div class="invalid-feedback">
                            El campo Nombre es requerido
                        </div>
                    </div>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Description</label>
                        <input type="text" value="@Model.Description" class="form-control textNewVariable" id="description" autocomplete="off" />
                        <div class="invalid-feedback">
                            El campo Description es requerido
                        </div>
                    </div>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Value String</label>
                        <input type="text" value="@Model.ValueString" class="form-control textNewVariable" id="valueString" autocomplete="off" required />
                    </div>

                    <div class="col-6 col-md-4">
                        <label for="name" class="form-label fw-bold">Value Numeric</label>
                        <input type="text" value="@Model.ValueNumeric" class="form-control textNewVariable" id="motherName" autocomplete="off" />
                    </div>
                    <input type="hidden" value="@Model.IdSystemVariable" id="idSystemVariable" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="EditVariable()">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>