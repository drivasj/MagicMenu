@using DigitalMenu.Models.Administrator
@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Administrator/Shared/_AdministratorLayout.cshtml";
}

<h4>Role List</h4>
<hr class="bg-custom-color" />

@* <button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalNewRole">
    New Rol
</button> *@

<button type="button" class="btn btn-outline-primary mb-3" onclick="ShowCreateRole()">
    New Rol
</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>         
            <th>Active</th>
            <th>Edit</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Active</td>
                <td>
                    <a onclick="ShowDetailRol(@item.IdRole)" style="cursor:pointer" class="bi bi-pencil-square"></a>
                </td>
                <td>
                    <a onclick="UpdateStateRole(@item.IdRole)" style="cursor:pointer" class="bi bi-android"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="DetailRolContainer">
</div>

@section Scripts {
    <script src="~/js/administrator/role.js" asp-append-version=" true"></script>
}