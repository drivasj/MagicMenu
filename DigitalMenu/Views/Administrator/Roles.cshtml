@using DigitalMenu.Models.Administrator
@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Administrator/Shared/_AdministratorLayout.cshtml";
}

<h4>Role List</h4>
<hr class="bg-custom-color" />

<button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#ModalNewRole">
    New Rol
</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>         
            <th>Active</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Active</td>
                <td>
                    <a class="bi bi-pencil-square" asp-action="Editar" asp-route-id="@item.IdRole"></a>
                </td>
                <td>
                    <a class="bi bi-trash3" asp-action="Borrar" asp-route-id="@item.IdRole"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Partial\_CreateRolForm" />

@section Scripts {
    <script src="~/js/administrator/role.js" asp-append-version=" true"></script>
}