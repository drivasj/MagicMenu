@using DigitalMenu.Models.Administrator
@{
    ViewData["Title"] = "Create Menu";
}

<h3>Crear Menu</h3>

<div>
    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="IdApplication" id="idApplication" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Area" id="area" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Controller" id="controller" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Action" id="action" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Name" id="name" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Description" id="description" autocomplete="off" />
    </div>

    <button type="button" class="btn btn-primary" onclick="saveMenu()">Guardar</button>
</div>


@section Scripts {
    <script src="~/js/administrator/menu.js" asp-append-version="true"></script>
}