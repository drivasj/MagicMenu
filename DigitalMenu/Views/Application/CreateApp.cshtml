@using DigitalMenu.Models.Administrator
@{
    ViewData["Title"] = "Create Application";
}

<h3>Crear Application</h3>

<div>
    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Name" id="name" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Description" id="description" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Display" id="display" autocomplete="off" />
    </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="text" class="form-control" placeholder="Icon" id="icon" autocomplete="off" />
    </div>

    <button type="button" class="btn btn-primary" onclick="saveApp()">Guardar</button>
</div>


@section Scripts {
    <script src="~/js/administrator/application.js" asp-append-version="true"></script>
}