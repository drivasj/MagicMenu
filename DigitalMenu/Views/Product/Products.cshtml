@using DigitalMenu.Models.Product
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Product/Shared/ProductLayout.cshtml";
}

<h4>Lista de productos</h4>
<hr class="bg-custom-color" />

<button type="button" class="btn btn-outline-primary mb-3" onclick="ShowCreateProduct()">
    New Product
</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Categoria</th>
            <th>Codigo</th>
            <th>Stock</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Edit</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.NameProduct</td>
                <td>@item.NameCategory</td>
                <td>@item.Code</td>
                <td>@item.Stock</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Active</td>
                <td>
                    <a onclick="ShowDetailProduct(@item.IdProduct)" style="cursor:pointer" class="bi bi-pencil-square"></a>
                </td>
                <td>
                    <a onclick="UpdateStateProduct(@item.IdProduct)" style="cursor:pointer" class="bi bi-android"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="DetailProductContainer">
</div>

@section Scripts {
    <script src="~/js/Product/Product.js" asp-append-version=" true"></script>
}